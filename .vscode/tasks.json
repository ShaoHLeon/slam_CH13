{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-I", "/usr/include/opencv4",
                "-I", "/usr/include/eigen3",
                "-I", "/usr/local/include/ceres",
                "-I", "/usr/local/cuda-12.1/include",
                "-L/usr/local/cuda-12.1/lib64",
                "-I", "/usr/local/include/g2o",

                // 链接OpenCV库
                "-lopencv_core",                       // OpenCV核心模块
                "-lopencv_imgproc",                    // OpenCV图像处理模块
                "-lopencv_highgui",                    // OpenCV GUI模块
                "-lopencv_imgcodecs",                  // OpenCV图像编解码模块
                "-lopencv_calib3d",                    // OpenCV相机校准和3D重建模块
                "-lopencv_features2d",                 // OpenCV特征检测模块
                "-lopencv_video",                      // OpenCV视频处理模块
                "-lopencv_videoio",

                // g2o库
                // "-lg2o_core",                    // g2o核心库
                // "-lg2o_types_slam2d",           // 2D SLAM类型
                // "-lg2o_types_slam3d",           // 3D SLAM类型
                // "-lg2o_solver_dense",           // 稠密求解器
                // "-lg2o_solver_csparse",         // 稀疏求解器
                // "-lg2o_stuff",                  // g2o工具函数
                // "-lg2o_csparse_extension",     // CSparse扩展


                "-lceres",                              // 链接ceres库
                "-lglog",                               // 链接glog库         
                "-lgflags",                             // 链接gflags库,Google日志库

                // 链接CUDA库
                "-lcusolver",                           // 链接CUDA求解器库
                "-lcublas",                             // 链接CUDA线性代数库
                "-lcudart",                             // 链接CUDA运行时库

                // 链接SuiteSparse库（稀疏矩阵运算）
                "-lcholmod",                           // Cholesky分解
                "-lccolamd",                           // 列近似最小度排序
                "-lcamd",                              // 近似最小度排序
                "-lamd",                               // 近似最小度排序
                "-lcolamd",                            // 列近似最小度排序
                "-lsuitesparseconfig",                 // SuiteSparse配置
                "-lcxsparse",                       // 压缩稀疏行矩阵

                // 链接线性代数库
                "-llapack",                            // 线性代数包
                "-lblas",                              // 基础线性代数子程序

                // 系统库
                "-lpthread",                           // POSIX线程库
                "-lrt",                                // 实时库
                "-ldl",                               // 动态链接库


            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}